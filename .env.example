# ============================================
# Sun Booking Tour - Environment Variables
# ============================================
# Copy this file to .env and update with your actual values
# The .env file is automatically loaded by spring-dotenv library
# DO NOT commit .env file to version control

# ============================================
# Application Configuration
# ============================================
SPRING_PROFILE=local
SERVER_PORT=8080

# Internationalization (i18n) Configuration
# Supported locales: en (English)
# This sets the default language for the entire application
APP_LOCALE=en

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:mysql://localhost:3306/sun_booking_tour?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=root
DB_PASSWORD=root

# Connection Pool Settings (Optional)
DB_POOL_SIZE=10
DB_MIN_IDLE=5

# ============================================
# JWT Configuration
# ============================================
# Generate a secure secret key (minimum 256 bits / 32 characters)
# You can generate one using: openssl rand -base64 32
JWT_SECRET=5367566B59703373367639792F423F4528482B4D6251655468576D5A71347437
JWT_EXPIRATION=86400000

# ============================================
# Security Configuration
# ============================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# ============================================
# CORS Configuration
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_WEB=INFO
LOG_LEVEL_SECURITY=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SQL_BINDER=TRACE

LOG_FILE_NAME=logs/sun-booking-tour.log
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_HISTORY=7
LOG_TOTAL_SIZE_CAP=100MB

# For Production, use absolute path:
# LOG_FILE_PATH=/var/log/sun-booking-tour/application.log

# ============================================
# File Upload Configuration
# ============================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# ============================================
# Production-specific Configuration
# ============================================
# Uncomment and configure these for production deployment

# DB_URL=jdbc:mysql://production-host:3306/sun_booking_tour?useSSL=true&serverTimezone=UTC
